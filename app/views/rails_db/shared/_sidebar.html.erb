<h3>
  Databases
</h3>

<ul class="side-nav">
  <% rails_connection_names.each do |connection_name| %>
    <li>
      <%= link_to root_path(primary_database: connection_name), class: 'sidebar_table' do %>
        <%= fa_icon 'database' %>
        <%= connection_name %>
      <% end %>
    </li>
  <% end %>
</ul>

<h3>Tables</h3>

<input id='rails_db_tables_input' placeholder='... quick filter by table name'>

<ul class="side-nav tables" id='rails_db_tables'>
  <% rails_db_tables.each do |table| %>
    <li>
      <%= link_to table_data_path(table), remote: true, class: "sidebar_table sidebar_table_#{table}" do %>
        <%= fa_icon 'table'%>
        <%= table %>
      <% end %>
    </li>
  <% end %>
</ul>
